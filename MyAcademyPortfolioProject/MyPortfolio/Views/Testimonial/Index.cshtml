@model List<MyPortfolio.Models.TblTestimonials>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>Referanslar Sayfası</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim Url</th>
        <th>Açıklama/Mesaj</th>
        <th>Ad Soyad</th>
        <th>Meslek</th>
        <th>Durum</th>
        <th>Mesaj Tarihi</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialId</td>
            <td>@item.ImageUrl</td>  @*  @item.   dediğimiz zaman tablodaki değerler otomatik gelecektir  *@
            <td>@item.Comment</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@( item.Status == true ? "Aktif" : "Pasif" )</td>
            <td>@item.CommentDate</td>

            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-info">Güncelle</a></td>
            <td><a href="/Testimonial/MakeActive/@item.TestimonialId" class="btn btn-outline-success">Aktif</a></td>
            <td><a href="/Testimonial/MakePassive/@item.TestimonialId" class="btn btn-outline-secondary">Pasif</a></td>

        </tr>
    }
</table>
<br />
<a href="/Testimonial/AddTestimonial" class="btn btn-outline-dark">Yeni Referans Bölümü Ekle</a>

