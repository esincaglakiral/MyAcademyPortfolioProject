@model MyPortfolio.Models.TblExperiences

@{
    ViewBag.Title = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h2>Deneyim Ekleme Sayfası</h2>

<form method="post">
  
    <label>Başlangıç Yılı</label>
    <select id="StartYear" name="StartYear" class="form-control">
        @for (int i = DateTime.Now.Year; i >= DateTime.Now.Year - 100; i--)
        {
            <option value="@i">@i</option>
        }
    </select>
    <br />
    <label>Bitiş Yılı</label>
    <select id="EndYear" name="EndYear" class="form-control">
        <option value="Devam Ediyor">Devam Ediyor</option>
        @for (int i = DateTime.Now.Year; i >= DateTime.Now.Year - 100; i--)
        {
            <option value="@i">@i</option>
        }
    </select>
    <br />
    <label>Pozisyon</label>
    <input type="text" name="Title" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" name="Description" class="form-control" />
    <br />
    <label>Şirket Adı</label>
    <input type="text" name="Company" class="form-control" />
    <br />
    <label>Konum</label>
    <input type="text" name="Location" class="form-control" />
    <br />
    <button class="btn btn-outline-success">Kaydet</button>

</form>

