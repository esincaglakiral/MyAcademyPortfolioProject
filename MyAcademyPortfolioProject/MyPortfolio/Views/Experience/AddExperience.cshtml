@model MyPortfolio.Models.TblExperiences

@{
    ViewBag.Title = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h2>Deneyim Ekleme Sayfası</h2>

<form method="post">
    <label>Başlangıç Yılı</label>
    <input type="date" id="startYearPicker" name="startYearPicker" onchange="extractYear()" class="form-control" />
    <input type="hidden" id="StartYear" name="StartYear" />

    <script>
        function extractYear() {
            var date = document.getElementById('startYearPicker').value;
            var year = new Date(date).getFullYear();
            document.getElementById('StartYear').value = year; // Gizli alana yıl değerini ata
        }
    </script>
    <br />
    <label>Bitiş Yılı</label>
    <input type="text" name="EndYear" class="form-control" />
    <br />
    <label>Pozisyon</label>
    <input type="text" name="Title" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" name="Description" class="form-control" />
    <br />
    <label>Şirket Adı</label>
    <input type="text" name="Company" class="form-control" />
    <br />
    <label>Konum</label>
    <input type="text" name="Location" class="form-control" />
    <br />
    <button class="btn btn-outline-success">Kaydet</button>

</form>

