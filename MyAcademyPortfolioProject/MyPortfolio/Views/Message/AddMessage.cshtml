@model MyPortfolio.Models.TblMessages

@{
    ViewBag.Title = "AddMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h2>Mesaj Ekleme Sayfası</h2>
<br />
<form method="post">

    <label>Ad Soyad</label>
    <input type="text" name="Name" class="form-control" />
    <br />
    <label>Email</label>
    <input type="email" name="Email" class="form-control" />
    <br />
    <label>Konu</label>
    <input type="text" name="Subject" class="form-control" />
    <br />
    <label>Mesaj İçeriği</label>
    <input type="text" name="MessageContent" class="form-control" />
    <br />
    <button type="submit" class="btn btn-outline-success">Kaydet</button>

</form>

