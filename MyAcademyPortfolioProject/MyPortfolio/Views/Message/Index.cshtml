@model List<MyPortfolio.Models.TblMessages>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>Gelen Mesajlar Sayfası</h3>
<br />

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Email</th>
        <th>Konu</th>
        <th>Mesaj İçeriği</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>@item.MessageId</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>@item.MessageContent</td>
            <td><a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Message/UpdateMessage/@item.MessageId" class="btn btn-outline-info">Güncelle</a></td>

        </tr>
    }
</table>
<br />
<a href="/Message/AddMessage" class="btn btn-outline-dark">Yeni Mesaj Bilgisi Ekle</a>


