@model MyPortfolio.Models.TblSocialMedias

@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h2>Hizmet Güncelleme Sayfası</h2>
<br />
<form method="post">
    <input type="hidden" name="SocialMediaId" value="@Model.SocialMediaId" />
    <label>Sosyal Medya Adı</label>
    <input type="text" name="SocialMediaName" value="@Model.SocialMediaName" class="form-control" />
    <br />
    <label>Sosyal Medya URL</label>
    <input type="url" name="Url" value="@Model.Url" class="form-control" />
    <br />
    <label>Icon</label>
    <input type="text" name="Icon" value="@Model.Icon" class="form-control" />
    <br />
    <button class="btn btn-outline-info">Güncelle</button>

</form>


